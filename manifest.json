{
	"name": "ControlStadia",
	"version": "0.0.2",
	"description": "ControlStadia allows arbitrary mapping of input devices to a \"standard\" virtual input controller which works with Stadia!",
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	"page_action": {
		"default_popup": "settings.html",
		"default_icon": {
			"16": "img/cs-16.png",
			"32": "img/cs-32.png",
			"48": "img/cs-48.png",
			"128": "img/cs-128.png"
		  }
	},
	"content_scripts": [
		{
			"matches": [
				"https://stadia.google.com/*",
				"https://gamepad-tester.com/*"
			],
			"js": ["controlstadia.js"],
			"run_at": "document_start"
		}
	],
	"permissions": [
		"storage",
		"declarativeContent"
	],
	"icons": {
		"16": "img/cs-16.png",
		"32": "img/cs-32.png",
		"48": "img/cs-48.png",
		"128": "img/cs-128.png"
	},
	"manifest_version": 2
}
